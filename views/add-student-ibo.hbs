<head>
    <link rel="stylesheet" href="../css/dashboard.css">
</head>

<div class="container-fluid">
    <div class="row flex-nowrap">
        {{> navbar}}

        <div class="col-9 mt-3">
            <div class="d-flex justify-content-between">
                <div class="col-lg-9 me-5">
                    {{> headerSearch}}

                    <div class="ms-3" style="width: 67rem;">
                        <h1 class="border-bottom border-secondary pb-1">Add Student to {{ adminData.organization }}</h1>
                        <form action="/student/add-students-to-ibo" method="POST" id="formAddStudentIBO"
                            class="d-flex align-items-center form-group">
                            <div class="row w-100">
                                <div class="col-6 d-flex justify-content-between align-items-start">
                                    <label for="searchStudent" class="form-label searchStudentIBO pt-1">Search
                                        Student</label>
                                    <div class="w-75 position-relative d-flex flex-column">
                                        <div class="input-group search-ibo-group border">
                                            <input class="form-control border-0 search-ibo-field bg-white" type="search"
                                                aria-label="Search" id="searchInput" autocomplete="off">
                                            <span class="input-group-text border-0">
                                                <img src="../img/search.png" alt="Search">
                                            </span>
                                        </div>
                                        <ul id="suggestionsList"
                                            class="list-group position-absolute top-100 start-0 end-0"
                                            style="z-index: 1000;"></ul>
                                    </div>
                                </div>

                                <div class="col-6 d-flex align-items-start">
                                    <div class="vertical-line me-3"></div>
                                    <div class="d-flex flex-column w-100 h-100 position-relative">
                                        <div class="d-flex flex-column added-members-container w-100">
                                            <span style="color: gray;">Students to be added</span>
                                            <p id="membersToAdd" class="fw-bold"></p>
                                        </div>
                                        <div class="d-flex justify-content-center w-100 position-absolute bottom-0">
                                            <input class="btn btn-add-student btn-outline-success w-75" type="submit"
                                                value="Add Students">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-3 ms-5">
                    {{> headerOfficer}}

                    <div id="adminData" data-ibo="{{ adminData.organization }}"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../js/addStudentIBO.js"></script>