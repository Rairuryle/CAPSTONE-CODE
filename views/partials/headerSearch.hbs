<head>
    <link rel="stylesheet" href="../css/headerComponents.css">
</head>

<nav class="navbar search-dashboard-container bg-white">
    <div class="container-fluid">
        <img src="../img/lsu-star-black.png" alt="LSU Corporate Logo" class="lsu-star-search-dashboard mx-3">
        <form class="d-flex w-50">
            <div class="input-group search-dashboard-group border w-100">
                <input id="searchStudentProfile" class="form-control border-0" type="search"
                    placeholder="Search Student..." aria-label="Search">
                <span class="input-group-text border-0 bg-white">
                    <img src="../img/search.png" id="searchButton" alt="Search">
                </span>
            </div>
        </form>
    </div>
    <div id="resultResponse" class="user-prompt top-0 start-50 translate-middle-x mt-4"
        style="display: {{#if message}} block {{else}} none {{/if}};">
        {{message}}
    </div>
</nav>

<script src="../js/searchStudentProfile.js"></script>