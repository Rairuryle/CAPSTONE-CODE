<div class="modal fade" id="editStudentProfileModal" tabindex="-1" aria-labelledby="editStudentProfileModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content px-3">
            <div class="modal-header border-bottom-0 pb-2">
                <h1 class="modal-title fw-bold fs-3 mt-1" id="editStudentProfileModalLabel">
                    Edit Student Profile
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-edit-student-profile">
                <div class="edit-student-name d-flex me-3">
                    <div class="input-group edit-name-group border border-gray border-2">
                        <input id="editStudentName" class="form-control border-0 fw-bold pt-0 pb-0" type="text"
                            name="first_name" placeholder="{{student.first_name}}">
                        <input id="editStudentName" class="form-control border-0 fw-bold pt-0 pb-0" type="text"
                            name="last_name" placeholder="{{student.last_name}}">
                        <span class="input-group-text border-0 bg-white">
                            <img src="../img/edit.png" alt="Edit Name">
                        </span>
                    </div>
                </div>

                <div class="d-flex align-items-center mt-2 w-100" style="height: 2rem;">
                    <div class="input-group edit-id-number-group border border-gray border-2 h-100">
                        <input id="editIDNumber" class="form-control border-0 h-100" type="text" name="id_number"
                            placeholder="{{student.id_number}}">
                        <span class="input-group-text border-0">
                            <img src="../img/edit.png" alt="Edit Name">
                        </span>
                    </div>

                    <select name="active_status" id="editActiveStatus" class="edit-active-status mt-0 mx-2 h-100">
                        <option selected="selected" value="{{student.active_status}}">
                            {{student.active_status}}
                        </option>
                        {{#if (eq student.active_status "Active")}}
                        <option value="Inactive">Inactive</option>
                        {{else}}
                        <option value="Active">Inactive</option>
                        {{/if}}
                    </select>
                    <select name="exemption_status" id="editExemptionStatus" class="edit-exemption-status h-100">
                        <option selected="selected" value="{{student.exemption_status}}">
                            {{student.exemption_status}}
                        </option>
                        {{#if (eq student.exemption_status "Exempted")}}
                        <option value="Not Exempted">Not Exempted</option>
                        {{else}}
                        <option value="Exempted">Exempted</option>
                        {{/if}}
                    </select>

                </div>

                <div class="d-flex flex-wrap mt-3 align-items-center">
                    <div class="d-flex flex-column">
                        <span class="student-profile-small-text">Department</span>
                        <select name="department_name" id="editDepartmentNameDropdown"
                            class="fs-5 fw-bold py-1 pt-2 ps-2 pe-5">
                            <option selected="selected" value="{{student.department_name}}">
                                {{student.department_name}}
                            </option>
                        </select>
                    </div>
                    <div class="vl ms-3"></div>
                    <div class="d-flex flex-column ms-3">
                        <span class="student-profile-small-text">Course</span>
                        <select name="course_name" id="editCourseNameDropdown" class="fs-5 fw-bold py-1 pt-2 ps-2 pe-5">
                            <option selected="selected" value="{{student.course_name}}">
                                {{student.course_name}}
                            </option>
                        </select>
                    </div>
                    <div class="d-flex flex-column ms-4">
                        <span class="student-profile-small-text">Year</span>
                        <select name="year_level" id="editYearLevelDropdown" class="fs-5 fw-bold py-1 pt-2 ps-2 pe-5">
                            <option selected="selected" value="{{student.year_level}}">
                                {{student.year_level}}
                            </option>
                            {{#if (eq student.year_level 1)}}
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            {{else if (eq student.year_level 2)}}
                            <option value="1">1</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            {{else if (eq student.year_level 3)}}
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            {{else if (eq student.year_level 4)}}
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="5">5</option>
                            {{else if (eq student.year_level 5)}}
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            {{/if}}
                        </select>
                    </div>
                    <div class="d-flex flex-wrap align-items-center mt-4">
                        <span class="org-text org-small-text me-2">ABO</span>
                        <select name="abo_name" id="aboNameDropdown" class="org-spr border px-3 pe-5 py-2">
                            <option selected="selected" value="{{student.abo_name}}">{{student.abo_name}}</option>
                        </select>
                        <span class="org-text org-small-text ms-4 me-2">IBO</span>
                        <select name="ibo_name" id="iboNameDropdown" class="org-spr border px-3 pe-5 py-2">
                            <option selected="selected" value="{{student.ibo_name}}">{{student.ibo_name}}</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="modal-footer border-top-0">
                <button type="submit" class="btn btn-success btn-edit-student-profile-submit px-5">Save Changes</button>
            </div>
        </div>
    </div>
</div>