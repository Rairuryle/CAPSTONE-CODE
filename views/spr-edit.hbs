<head>
    <link rel="stylesheet" href="../css/spr.css">
</head>

<div class="container-fluid">
    <div class="row flex-nowrap">
        {{> navbar}}

        <div class="col-7 spr-parent-container mt-3 ms-1">
            {{> headerSearch}}

            {{#if student}}

            {{> studentProfile}}

            {{!-- spr table --}}
            <div class="participation-record-table-container mt-4">
                {{!-- attendance table --}}
                <div class="attendance-table-container">
                    <span class="attendance-table-label border px-4 py-2">ATTENDANCE</span>
                    <div class="attendance-table-header d-flex fw-bold mt-3 border-bottom border-2 pb-1">
                        <div class="col-3 ps-2">
                            <span>DATE</span>
                        </div>
                        <div class="col-2">
                            <span>AM</span>
                        </div>
                        <div class="col-3">
                            <span>PM</span>
                        </div>
                        <div class="col-4">
                            <span>OFFICER IN-CHARGE</span>
                        </div>
                    </div>

                    <div
                        class="attendance-table-information d-flex align-items-center border-bottom border-2 mt-3 pb-3">
                        <div class="col-3 ps-2">
                            <span>August 8, 2024</span>
                        </div>
                        <div class="col-2">
                            <div class="form-check form-check-inline ms-2">
                                <input class="form-check-input" type="checkbox" id="attendanceCheckboxAMIN" value="IN">
                                <label class="form-check-label" for="attendanceCheckboxAMIN">IN</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check form-check-inline ms-2">
                                <input class="form-check-input" type="checkbox" id="attendanceCheckboxPMIN" value="IN">
                                <label class="form-check-label" for="attendanceCheckboxPMIN">IN</label>
                            </div>
                            <div class="form-check form-check-inline ms-2">
                                <input class="form-check-input" type="checkbox" id="attendanceCheckboxPMOUT"
                                    value="OUT">
                                <label class="form-check-label" for="attendanceCheckboxPMOUT">OUT</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <span class="officer-in-charge officer-attendance-recorder ps-3">{{adminData.first_name}}
                                {{adminData.last_name}}</span>
                        </div>
                    </div>
                </div>

                {{!-- activity table --}}
                <div class="activity-table-container mt-4">
                    <div class="d-flex align-items-center">
                        <span class="activity-table-label border px-4 py-2">ACTIVITIES</span>
                        <button class="btn m-0 p-0" data-bs-toggle="modal" data-bs-target="#addActivitiesModal">
                            <img src="../img/add-spr.png" alt="Add Activity" class="add-activity-icon ms-2">
                        </button>
                    </div>
                    <div class="activity-actions-row d-flex mt-3 w-100">
                        <select name="selectEventDay" id="selectEventDay"
                            class="select-event-day border-gray bg-transparent fw-bold">
                            <option disabled="disabled" selected="selected">Select Day</option>
                            <option value="Day 1">Day 1</option>
                            <option value="Day 2">Day 2</option>
                        </select>
                        <div class="d-flex align-items-center ms-auto">
                            <img src="../img/document-filter.png" alt="Sort" class="ps-2" style="height: 20px;">
                            <select id="sortActivities"
                                class="form-control sort-activities bg-transparent border-0 fw-bold ps-1"
                                name="sortActivities">
                                <option value="" disabled selected>Sort By</option>
                                <option value="Activity" {{#if (eq selectedSort "Activity" )}}selected{{/if}}> Sort By
                                    Activity
                                </option>
                                <option value="Date" {{#if (eq selectedSort "Date" )}}selected{{/if}}>Sort
                                    By Date</option>
                                <option value="Role" {{#if (eq selectedSort "Role" )}}selected{{/if}}>Sort By
                                    Role</option>
                                <option value="Points" {{#if (eq selectedSort "Points" )}}selected{{/if}}>Sort By Points
                                </option>
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <form class="w-100" id="searchForm">
                                <div class="input-group search-activity-group border border-gray border-3"
                                    style="max-height:2rem;">
                                    <input class="form-control border-0 search-activity-field" type="search"
                                        aria-label="Search" id="searchInput">
                                    <span class="input-group-text border-0">
                                        <img src="../img/search.png" alt="Search">
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="activity-table-header d-flex fw-bold mt-3 border-bottom pb-1">
                        <div class="col-4 col-activity-name">
                            <span>ACTIVITY NAME</span>
                        </div>
                        <div class="col-2 ms-4 me-1">
                            <span>DATE</span>
                        </div>
                        <div class="col-3 col-role">
                            <span>ROLE</span>
                        </div>
                        <div class="col-1 ms-4 me-2">
                            <span>POINTS</span>
                        </div>
                        <div class="col-2 officer-activity-recorder-header">
                            <span>OFFICER IN-CHARGE</span>
                        </div>
                    </div>

                    <div class="activity-table-information-container mt-2">
                        <div
                            class="activity-table-information activity-table-information-odd d-flex align-items-center py-2">
                            <div class="col-4 col-activity-name">Dungeon Mayhem: Heroes Battle</div>
                            <div class="col-2 ms-4 me-1">November 4, 2024</div>
                            <div class="col-3 col-role">
                                <select name="assignRole" id="assignRole" class="assign-role ps-2 indiv-participant">
                                    <option disabled="disabled" selected="selected">Assign Role</option>
                                    <option value="INDIV. Participant">INDIV. Participant</option>
                                    <option value="TEAM Participant">Team Participant</option>
                                    <option value="PROG. Spectator">PROG. Spectator</option>
                                    <option value="OTH. Spectator">OTH. Spectator</option>
                                </select>
                            </div>
                            <div class="col-1 ms-4 me-2">15 points</div>
                            <div class="col-2 d-flex justify-content-between col-officer-in-charge">
                                <span
                                    class="officer-in-charge officer-activity-recorder ps-3 w-100">{{adminData.first_name}}
                                    {{adminData.last_name}}</span>
                                <button class="btn m-0 p-0" data-bs-toggle="modal"
                                    data-bs-target="#editActivitiesModal">
                                    <img src="../img/edit.png" alt="Edit Activity" class="ms-2">
                                </button>
                            </div>
                        </div>

                        <div
                            class="activity-table-information activity-table-information-even d-flex align-items-center py-2">
                            <div class="col-4 col-activity-name">Dress to Impress</div>
                            <div class="col-2 ms-4 me-1">November 4, 2024</div>
                            <div class="col-3 col-role">
                                <select name="assignRole" id="assignRole" class="assign-role ps-2 team-participant">
                                    <option disabled="disabled" selected="selected">Assign Role</option>
                                    <option value="INDIV. Participant">INDIV. Participant</option>
                                    <option value="TEAM Participant">Team Participant</option>
                                    <option value="PROG. Spectator">PROG. Spectator</option>
                                    <option value="OTH. Spectator">OTH. Spectator</option>
                                </select>
                            </div>
                            <div class="col-1 ms-4 me-2">20 points</div>
                            <div class="col-2 d-flex justify-content-between col-officer-in-charge">
                                <span
                                    class="officer-in-charge officer-activity-recorder ps-3 w-100">{{adminData.first_name}}
                                    {{adminData.last_name}}</span>
                                <img src="../img/edit.png" alt="Edit Activity" class="ms-2">
                            </div>
                        </div>

                        <div
                            class="activity-table-information activity-table-information-odd d-flex align-items-center py-2">
                            <div class="col-4 col-activity-name">Jigsawlympics</div>
                            <div class="col-2 ms-4 me-1">November 4, 2024</div>
                            <div class="col-3 col-role">
                                <select name="assignRole" id="assignRole" class="assign-role ps-2 prog-spectator">
                                    <option disabled="disabled" selected="selected">Assign Role</option>
                                    <option value="INDIV. Participant">INDIV. Participant</option>
                                    <option value="TEAM Participant">Team Participant</option>
                                    <option value="PROG. Spectator">PROG. Spectator</option>
                                    <option value="OTH. Spectator">OTH. Spectator</option>
                                </select>
                            </div>
                            <div class="col-1 ms-4 me-2">10 points</div>
                            <div class="col-2 d-flex justify-content-between col-officer-in-charge">
                                <span
                                    class="officer-in-charge officer-activity-recorder ps-3 w-100">{{adminData.first_name}}
                                    {{adminData.last_name}}</span>
                                <img src="../img/edit.png" alt="Edit Activity" class="ms-2">
                            </div>
                        </div>

                        <div
                            class="activity-table-information activity-table-information-even d-flex align-items-center py-2">
                            <div class="col-4 col-activity-name">Deal Or No Deal</div>
                            <div class="col-2 ms-4 me-1">November 4, 2024</div>
                            <div class="col-3 col-role">
                                <select name="assignRole" id="assignRole" class="assign-role ps-2 oth-spectator">
                                    <option disabled="disabled" selected="selected">Assign Role</option>
                                    <option value="INDIV. Participant">INDIV. Participant</option>
                                    <option value="TEAM Participant">Team Participant</option>
                                    <option value="PROG. Spectator">PROG. Spectator</option>
                                    <option value="OTH. Spectator">OTH. Spectator</option>
                                </select>
                            </div>
                            <div class="col-1 ms-4 me-2">5 points</div>
                            <div class="col-2 d-flex justify-content-between col-officer-in-charge">
                                <span
                                    class="officer-in-charge officer-activity-recorder ps-3 w-100">{{adminData.first_name}}
                                    {{adminData.last_name}}</span>
                                <img src="../img/edit.png" alt="Edit Activity" class="ms-2">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{else}}
            <p>No student record found.</p>
            {{/if}}
        </div>

        <div class="col col-spr-sidebar mt-3">
            {{> headerOfficer}}

            <div class="sidebar d-flex flex-column">
                {{!-- events --}}
                <div class="events-container p-2">
                    <div class="events-select-actions">
                        {{> selectEventScope}}
                        <div class="timeframe-select d-flex mt-2">
                            <div class="col dropdown">
                                <button class="btn dropdown-toggle select-year fw-bold border border-black px-3"
                                    type="button" id="selectYearDropdown" data-bs-toggle="dropdown"
                                    aria-expanded="false" style="width: 8.4rem;">
                                    {{selectedYear}}
                                </button>

                                <ul class="dropdown-menu dropdown-menu-year text-center w-100"
                                    aria-labelledby="selectYearDropdown">
                                    {{#each academicYears}}
                                    <li>
                                        <!-- Set onclick event to call updateDropdownText -->
                                        <button class="dropdown-item" type="button"
                                            onclick="updateDropdownText('{{this.academic_year}}')">
                                            {{this.academic_year}}
                                        </button>
                                    </li>
                                    {{/each}}
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <button class="btn btn-add-year m-0 p-0" data-bs-toggle="modal"
                                            data-bs-target="#addYearModal">
                                            <img src="../img/add-spr.png" alt="Add Year" style="width: 1.3rem;">
                                        </button>
                                    </li>
                                </ul>
                            </div>

                            <div class="col dropdown ms-2">
                                <button class="btn dropdown-toggle select-sem fw-bold border border-black px-3"
                                    type="button" id="selectSemDropdown" data-bs-toggle="dropdown" aria-expanded="false"
                                    style="width: 7.7rem;">
                                    {{selectedSemester}}
                                </button>

                                <ul class="dropdown-menu dropdown-menu-sem text-center w-100"
                                    aria-labelledby="selectSemDropdown">
                                    <li><a class="dropdown-item" href="#" onclick="updateSemesterText('1st Sem')">1st
                                            Sem</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="updateSemesterText('2nd Sem')">2nd
                                            Sem</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="events-display-container d-flex flex-column justify-content-center mt-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="fw-bold ps-2 event-scope-label"><span id="eventScopeLabel"></span></h5>

                            <button class="btn m-0 p-0" data-bs-toggle="modal" data-bs-target="#addEventsModal">
                                <img src="../img/add-spr.png" alt="Add Event" class="add-event-img pb-3">
                            </button>
                        </div>
                        {{#each filteredEvents}}
                        <div class="card event-card mb-1" data-scope="{{this.event_scope}}"
                            onclick="showEventDetails({{this.event_id}})">
                            <div class="card-body event-card-body d-flex flex-column py-2">
                                <div class="d-flex justify-content-between">
                                    <span class="card-title fw-bold">{{this.event_name}}</span>
                                    <button class="btn m-0 p-0 edit-event-btn" data-bs-toggle="modal"
                                        data-bs-target="#editEventsModal" data-event-name="{{this.event_name}}"
                                        data-event-start="{{formatDate this.event_date_start 'YYYY-MM-DD'}}"
                                        data-event-end="{{formatDate this.event_date_end 'YYYY-MM-DD'}}">
                                        <img src="../img/edit.png" alt="Edit Event" class="edit-event-icon me-2">
                                    </button>
                                </div>
                                <span class="card-text card-event-date">
                                    {{formatDate this.event_date_start}} - {{formatDate this.event_date_end}}
                                </span>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

                {{#if activities.length}}
                <h3>Associated Activities</h3>
                <ul>
                    {{#each activities}}
                    <li>{{this.activity_name}} on {{formatDate this.activity_date}}</li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No associated activities found for this event.</p>
                {{/if}}




                {{!-- import file --}}
                <div class="import-file-container mt-3">
                    <div class="card import-file-card">
                        <div class="card-body import-file-card-body d-flex justify-content-center align-items-center">
                            <button class="btn m-0 p-0" data-bs-toggle="modal" data-bs-target="#importFileModal">
                                <img src="../img/import.png" alt="Import File Icon">
                                <span class="px-2 import-file-text">IMPORT FILE</span> </button>
                        </div>
                    </div>
                </div>

                {{!-- points --}}
                <div class="points-container mt-3">
                    <div class="card points-card">
                        <div class="card-body points-card-body">
                            <div class="row d-flex align-items-center justify-content-center">
                                <div class="col d-flex flex-column align-items-center justify-content-center">
                                    <span class="text-center fw-bold activity-subtotal-text">Activity<br>Subtotal</span>
                                    <h3 class="fw-bold mt-2">13</h3>
                                </div>
                                <div class="col-1 d-flex justify-content-center m-0 p-0">
                                    <div class="vl"></div>
                                </div>
                                <div class="col d-flex flex-column align-items-center justify-content-center">
                                    <span
                                        class="text-center fw-bold attendance-subtotal-text">Attendance<br>Subtotal</span>
                                    <h3 class="fw-bold mt-2">13</h3>
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn btn-success btn-verify-points w-75 m-auto mt-1">Verify
                                    Points</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- modals --}}
        {{> modals/editStudentProfileModal}}
        {{> modals/addEventsModal}}
        {{> modals/editEventsModal}}
        {{> modals/deleteEventsModal}}
        {{> modals/addActivitiesModal}}
        {{> modals/editActivitiesModal}}
        {{> modals/deleteActivitiesModal}}
        {{> modals/importFileModal}}
        {{> modals/addYearModal}}
    </div>
</div>

<script src="../js/sprEdit.js"></script>